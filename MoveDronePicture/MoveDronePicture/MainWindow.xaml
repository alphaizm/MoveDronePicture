<Window x:Class="MoveDronePicture.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MoveDronePicture"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Loaded="Window_Loaded"
        Closing="Window_Closing">
    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal" Margin="10,10,0,0">
            <Label Content="コピー元ディレクトリ："/>
            <TextBox x:Name="m_txtBox_DirSrc" Width="670"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="10,0,0,0">
            <Label Content="コピー先ディレクトリ："/>
            <TextBox x:Name="m_txtBox_DirDst" Width="670"/>
        </StackPanel>
        <Button x:Name="m_btn_ReadSrc" Content="ファイル読み取り" IsEnabled="False"
                Click="m_btn_ReadSrc_Click"
                />
        <ListView x:Name="m_lstVw_FilesSrc" Width="500" ItemsSource="{Binding}" >
            <ListView.View>
                <GridView>
                    <!--    列情報を定義-->
                    <GridViewColumn Header="ファイル名" Width="150" DisplayMemberBinding="{Binding Path=FileName}"/>
                    <GridViewColumn Header="緯度" Width="100" DisplayMemberBinding="{Binding Path=Lat}"/>
                    <GridViewColumn Header="経度" Width="100" DisplayMemberBinding="{Binding Path=Lon}"/>
                    <GridViewColumn Header="高さ" Width="100" DisplayMemberBinding="{Binding Path=Height}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </StackPanel>
</Window>
