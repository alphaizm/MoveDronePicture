<Window x:Class="MoveDronePicture.GcpEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MoveDronePicture"
        mc:Ignorable="d"
        Title="GcpEditor" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="250"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Image x:Name="m_img_png"               Grid.Column="0"                     Grid.RowSpan="2"/>

        <ListView x:Name="m_lstVw_GcpPoint"     Grid.Column="1" Grid.Row="1"
                  ItemsSource="{Binding}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="緯度" DisplayMemberBinding="{Binding Lat}" />
                    <GridViewColumn Header="経度" DisplayMemberBinding="{Binding Lon}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
